<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffdd"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="48dp"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:background="#FF851B"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >


             <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center|center_vertical"
                    android:layout_height="80dp"
                    android:textSize="24dp"
                    android:textColor="#FFF"
                    android:layout_weight=".05"
                    android:text="Dashboard"/>

            <Button
                android:id="@+id/homeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight=".05"
                android:text="Home"/>
            </LinearLayout>

        <TextView
            android:id="@+id/textlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headerLayout"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:text="Delivery Status (E-way Generation)"
            android:textColor="#000" />

        <TableLayout
            android:id="@+id/tableDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/textlayout"
            android:stretchColumns="0,1,2"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">


            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView1c"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="3dp"
                    android:background="#ffff"
                    android:gravity="center"
                    android:text="24 Hours"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000"></TextView>

                <TextView
                    android:id="@+id/textView2c"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="#1899CD"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:text="7 Days"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000"></TextView>

                <TextView
                    android:id="@+id/textView3c"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:background="#ffff"
                    android:gravity="center"
                    android:text="28 Days"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000"></TextView>

            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/simple_table"
            android:layout_width="fill_parent"
            android:layout_below="@+id/tableDate"
            android:layout_marginTop="20dp"
            android:layout_margin="22dp"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1" >


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#f00" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="42dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:background="#ffff"
                    android:gravity="center"
                    android:text="E-way generation request"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"></TextView>

                <TextView
                    android:background="#ffff"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="227"
                    android:textColor="#000"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:gravity="center" >
                </TextView>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#f00" >
                <TextView
                    android:background="#ffff"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="In-process"
                    android:textColor="@color/black"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:gravity="center" >
                </TextView>

                <TextView
                    android:background="#ffff"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="50"
                    android:textColor="#000"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:gravity="center" >
                </TextView>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#f00" >
                <TextView
                    android:background="#ffff"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Delivered"
                    android:textColor="@color/black"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:gravity="center" >
                </TextView>

                <TextView
                    android:background="#ffff"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="150"
                    android:textColor="#000"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:gravity="center" >
                </TextView>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#f00" >
                <TextView
                    android:background="#ffff"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Pending"
                    android:textColor="@color/black"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:gravity="center" >
                </TextView>

                <TextView
                    android:background="#ffff"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="27"
                    android:textColor="#000"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:gravity="center" >
                </TextView>
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/txtPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/simple_table"
            android:gravity="center"
            android:text="Payment Status"
            android:textColor="#000" />

        <LinearLayout
            android:id="@+id/valueLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/txtPayment"
            android:layout_weight="1" >

            <Button
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:textSize="12dp"
                android:background="@drawable/border"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000"
                android:text="$1744.33"/>

            <Button
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:background="@drawable/border"
                android:textSize="12dp"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:textColor="#000"
                android:layout_weight="1"
                android:text="750$"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/creditLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/valueLayout"
            android:layout_weight="1" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:textSize="12dp"

                android:gravity="center|top"
                android:textColor="#8F9499"
                android:text="Available Credit"/>

            <TextView
                android:layout_width="0dip"
                android:layout_height="24dp"

                android:textSize="12dp"
                android:gravity="center|top"
                android:textColor="#8F9499"
                android:layout_weight="1"
                android:text="Credit Score"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/creditLayout"
            android:layout_weight="1" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:textSize="12dp"
                android:gravity="center|bottom"
                android:textColor="#8F9499"
                android:text="Current Balance"/>

            <TextView
                android:layout_width="0dip"
                android:layout_height="24dp"
                android:textSize="12dp"
                android:gravity="center|bottom"
                android:textColor="#8F9499"
                android:layout_weight="1"
                android:text="$125.67"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/layout1"
            android:layout_weight="1" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:textSize="12dp"
                android:gravity="center|bottom"
                android:textColor="#8F9499"
                android:text="Present Used"/>

            <TextView
                android:layout_width="0dip"
                android:layout_height="24dp"
                android:textSize="12dp"
                android:gravity="center|bottom"
                android:textColor="#8F9499"
                android:layout_weight="1"
                android:text="41.8%"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/layout2"
            android:layout_weight="1" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:textSize="12dp"
                android:gravity="center|bottom"
                android:textColor="#8F9499"
                android:text="Credit Limit"/>

            <TextView
                android:layout_width="0dip"
                android:layout_height="24dp"
                android:textSize="12dp"
                android:gravity="center|bottom"
                android:textColor="#8F9499"
                android:layout_weight="1"
                android:text="$300.00"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>