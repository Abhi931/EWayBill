<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background_rotate"
    android:padding="40dp"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <LinearLayout
        android:id="@+id/layoutTransporterRegistration"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:visibility="visible"
        android:padding="20dp"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <Button
            android:id="@+id/btnSubmitInvoice"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff9b00"
            android:text="Do it yourself"
            android:textSize="18dp"
            android:textColor="@color/ntv_white"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:padding="20dp"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <Button
            android:id="@+id/btnGenerateEwayBill"
            android:layout_width="0dip"
            android:text="Get it done with GlotechVidya"
            android:background="#ff9b00"
            android:textSize="18dp"
            android:textColor="@color/ntv_white"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>

