    <LinearLayout
        android:id="@+id/addSupplierLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#61A6DD"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight=".05"
            android:gravity="left|center"
            android:layout_marginLeft="6dp"
            android:text="Supplier Registration"
            android:textColor="#FFF"
            android:textSize="22dp" />

        <ImageButton
            android:id="@+id/btnSupplierAdd"
            android:layout_width="46dp"
            android:layout_height="47dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="22dp"
            android:background="@drawable/add_user_icon"
            android:text="Add"
            android:textColor="#ff9b00"
            android:textSize="16dp" />

        <ImageButton
            android:id="@+id/homeBtn"
            android:layout_width="42dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:layout_marginRight="9dp"
            android:background="@drawable/home"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/supplierRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="519dp"
        android:padding="10dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/addSupplierLayout"
        tools:visibility="visible" />
</android.support.constraint.ConstraintLayout>